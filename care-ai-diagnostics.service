[Unit]
Description=Care AI Diagnostics Flask Application
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/var/www/care_ai_diagnostics
Environment=PATH=/var/www/care_ai_diagnostics/venv/bin
ExecStart=/var/www/care_ai_diagnostics/venv/bin/gunicorn --config gunicorn.conf.py app:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target